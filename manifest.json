{
  "name": "Angular 2.0 Batarangle",
  "version": "0.1.0",
  "description": "Extends the Developer Tools, adding tools for debugging and profiling Angular 2.0 applications.",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "devtools_page": "index.html",
  "background": {
    "scripts": ["build/channel.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "build/backend.js"
    ],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [
    "node_modules/*",
    "build/*"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "images/webstore-icon.png",
    "48": "images/webstore-icon.png",
    "128": "images/webstore-icon.png"
  }
}